<li>
  <%= comment.body %> -
  <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago</small>

  <div class='col-sm-12 col-xs-12 blog-comments'>
    <h3>Comments</h3>

    <%= simple_form_for [comment, Comment.new] do |f| %>
      <div class='form-group'>
        <%= f.input :body, placeholder: 'Add a reply', class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.button :submit, 'Reply' %>
      </div>
    <% end %>

  <ul>
      <%= render partial: 'comments/comment', collection: comment.comments.order(:created_at) %>
  </ul>
</li>
