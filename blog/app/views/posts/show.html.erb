<div class='container'>
  <div class='col-sm-12 col-xs-12 blog-content'>
    <h2 class='text-left'>
      <%= @post.title %>
    </h2>
    <h5 class='text-left'>
      <%= @post.created_at.strftime('%b %d, %Y') %>
    </h5>
    <div>
      <%= raw @post.body %>
    </div>
  </div>

  <div class='col-sm-12 col-xs-12 blog-comments'>
    <h3>Comments</h3>

    <%= simple_form_for [@post, Comment.new] do |f| %>
      <div class='form-group'>
        <%= f.input :body, placeholder: 'Add a comment', class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.button :submit, 'Add Comment' %>
      </div>
    <% end %>

    <ul>
      <%= render partial: 'comments/comment', collection: @post.comments.order(:created_at) %>
    </ul>
  </div>
</div>
